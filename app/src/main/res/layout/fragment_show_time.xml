<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/screen_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/screen_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_hourgalss"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>
            <TextView
                android:id="@+id/screen_text"
                android:layout_toEndOf="@+id/screen_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="屏幕使用时间"
                android:textColor="@color/toolBarFont"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_marginStart="30dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/weekstats"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_below="@id/screen_time">

            <ImageView
                android:id="@+id/graph_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_statics"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>
            <TextView
                android:id="@+id/graph_text"
                android:layout_toEndOf="@+id/graph_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="七日统计"
                android:textColor="@color/toolBarFont"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_marginStart="30dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/appstats"
            android:layout_below="@+id/weekstats"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/apps_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_apps"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>
            <TextView
                android:id="@+id/apps_text"
                android:layout_toEndOf="@id/apps_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="应用详情"
                android:textColor="@color/toolBarFont"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_marginStart="30dp"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>


